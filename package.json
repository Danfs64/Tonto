{
    "name": "tonto",
    "displayName": "tonto",
    "publisher": "Lenke",
    "description": "Tonto is a DSL for creating OntoUML models",
    "version": "0.1.0",
    "license": "MIT",
    "icon": "docs/images/TontoIcon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/matheuslenke/Tonto"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tonto",
                "aliases": [
                    "Tonto",
                    "tonto"
                ],
                "extensions": [
                    ".tonto"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tonto",
                "scopeName": "source.tonto",
                "path": "./syntaxes/tonto.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.generateTonto",
                "title": "Generate Tonto"
            },
            {
                "command": "extension.generateJSON",
                "title": "Generate JSON"
            },
            {
                "command": "extension.validateModel",
                "title": "Validate Model"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:tonto"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "tonto-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run clean && tsc --noEmit && npm run lint && node esbuild.js --minify",
        "package": "vsce package --pre-release --baseContentUrl https://github.com/matheuslenke/Tonto --yarn",
        "publish": "vsce publish --baseContentUrl https://github.com/matheuslenke/Tonto --yarn",
        "clean": "rimraf out",
        "lint": "eslint src --ext ts",
        "build": "node esbuild.js && tsc --noEmit",
        "watch": "node esbuild.js --watch",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chevrotain": "^9.1.0",
        "chalk": "^4.1.2",
        "ajv": "^8.11.0",
        "colors": "^1.4.0",
        "commander": "^8.0.0",
        "jsonfile": "^6.1.0",
        "langium": "^0.5.0",
        "node-fetch": "^2.6.1",
        "node-fetch-native": "^0.1.4",
        "ontouml-js": "../ontouml-js",
        "ontouml-schema": "0.2.4",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-uri": "^3.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "esbuild": "^0.14.43",
        "eslint": "^8.22.0",
        "langium-cli": "^0.5.0",
        "typescript": "^4.7.4"
    },
    "resolutions": {
        "@typescript-eslint/parser": "^1.11.0",
        "@typescript-eslint/eslint-plugin": "^1.11.0"
    }
}
