{
  "name": "tonto",
  "scopeName": "source.tonto",
  "fileTypes": [
    ".tonto"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.tonto",
      "match": "\\b(category|class|collective|kind|mode|module|phase|quality|ref|relator|role|roleMixin|specializes|subkind)\\b"
    },
    {
      "name": "string.quoted.double.tonto",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.tonto",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.tonto",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.tonto"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.tonto"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.tonto"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.tonto"
        }
      ]
    }
  }
}